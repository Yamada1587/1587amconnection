<div class=user-show-body>
<br>
<%= link_to "授業一覧に戻る", lessons_path %>
<%= link_to "通知一覧", notifications_index_path %>
<% unless current_user.id == @user.id  %>
  <%= link_to "マイページへ", user_path(current_user.id) %>
  <h1><%= @user.name %>のプロフィール</h1>
<% else %>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %> <!-- ログアウトをする -->
<% end %> 
<br> 
<% if @user.image? %>
  <%= image_tag @user.image.url, :size => '100x100' %>
<% else %>
  <%= image_tag "/assets/default.jpg", :size => '100x100' %>
<% end %>
<% if @user.id == current_user.id %>
<%= link_to "DM", rooms_path %>
<% else %>
  <% if @isRoom == true %>
    <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
  <% else %>
    <%= form_for @room do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, :value=> @user.id %>
      <% end %>
      <%= f.submit "チャットを始める" %>
    <% end %>
  <% end %>
<% end %>

<% unless @user == current_user %>
  <% if current_user.following?(@user) %>
    <%= link_to 'フォロー中', unfollow_path(@user.id), method: :POST %>
  <% else %>
    <%= link_to 'フォローする', follow_path(@user.id), method: :POST %>
  <% end %>
<% end %>

<% unless @user == current_user %>
  <% if @user.following?(current_user) %>
    <%= 'フォローされています' %>
  <% else %>
    
  <% end %>
<% end %>

<p>名前:<%= @user.name %></p>
<p>学年:<%= @user.user_grade %></p>
<p>メールアドレス:<%= @user.email %></p>
<p>プロフィール:<%= @user.profile %></p>
<%= link_to 'フォロー', following_users_path(@user.id) %><%= "(#{@user.follower.count})" %>

<%= link_to 'フォロワー', followed_users_path(@user.id) %><%= "(#{@user.followed.count})" %>
<br>
<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>
<br>
<%= link_to '投稿一覧', lesson_list_path(@user.id) %>

<%= link_to '登録授業一覧', like_list_path(@user.id) %>
</div>