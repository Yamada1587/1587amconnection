#投稿を削除できなくなってしまった
<div class=lesson-index-body>
<% if user_signed_in? %>
<%= link_to "マイページへ", user_path(current_user.id) %>　
<% end %>
<%= link_to "新規投稿", new_lesson_path %>
<h3>投稿を検索</h3>
 <%= form_tag({controller:"lessons",action:"index"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'  %>
<% end %>
<div class="lessons-container">
  <% @lessons.each do |t| %>
    <div class="lesson">
      <p class="lesson-line">年度:<%= t.academic_year %></p>
      <p class="lesson-line">開講区分:<%= t.quarter %></p>
      <p class="lesson-line">講義名:<%= t.lesson_name %></p>
      <p class="lesson-line">教員名:<%= t.teacher_name %></p>
      <p class="lesson-line">曜日:<%= t.day7 %></p>
      <p class="lesson-line">時限:<%=t.period %></p>
      <br>
        <p>
        <% if user_signed_in? %>
          <% if current_user.already_liked?(t) %>
            <%= link_to lesson_like_path(id: t.id, lesson_id: t.id), class: "bookmark", method: :delete do %>
              <i class="fas fa-bookmark"></i><%= t.likes.count %>
            <% end %>
          <% else %>
            <%= link_to lesson_likes_path(id: t.id, lesson_id: t.id), class: "bookmark", method: :post do %>
              <i class="far fa-bookmark"></i><%= t.likes.count %>
            <% end %>
          <% end %>
        <% else %>
          <i class="far fa-bookmark"></i><%= t.likes.count %>
        <% end %>
        <%= link_to "授業詳細", lesson_path(t.id) %>
        </p>
        <p>
        投稿者:
        <% if t.user.image? %>
          <%= image_tag t.user.image.url, :size => '30x30' %>
        <% else %>
          <%= image_tag "/assets/default.jpg", :size => '30x30' %>
        <% end %>
        <a href="/users/<%= t.user.id %>"><%= t.user.name %></a>
        <% if user_signed_in? && current_user.id == t.user_id %> 
          <%= link_to "編集する", edit_lesson_path(t.id) %>
          <%= button_to "削除する", lesson_path(t.id), method: :delete %>
        <% end %>
        </p>
        <%= t.created_at %>
    </div>
  <% end %>
</div>
</div>